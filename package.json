  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "npm run lint && npm run test",
    "deploy": "node scripts/deploy-demo.js",
    "demo": "node scripts/live-demo.js",
